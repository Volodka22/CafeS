<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:id="@+id/main_cont"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bmv_height"
        tools:context=".MenuFragment"
        android:orientation="vertical">


    <LinearLayout
            android:id="@+id/button"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/container_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Давай знакомиться!"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

        <TextView
                android:textSize="17sp"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingHorizontal="50sp"
                android:paddingVertical="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Авторизуйся, чтобы иметь больше возможностей"/>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/container_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <Button
                    android:visibility="gone"
                    android:layout_marginTop="1dp"
                    android:text="Любимое"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:background="#000000"/>

        </LinearLayout>

        <Button
                android:layout_marginVertical="1dp"
                android:background="#000000"
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"/>


    </LinearLayout>



</FrameLayout>